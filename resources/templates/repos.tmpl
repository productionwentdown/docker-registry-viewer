{{define "repos"}}
<!doctype html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="/assets/css/table.css">
    </head>
    <body>
        <table>
            <tbody>
                <tr>
                    <th>Repository({{len .repos}})</th>
                    <th>Tags</th>
                </tr>
                {{range .repos}}
                <tr>
                    <td><a href="/tags/{{urlquery .Repo | urlquery}}">{{.Repo}}</td>
                    <td>{{.Count}}</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </body>
</html>
{{end}}
